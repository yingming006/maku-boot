<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.maku.edu.dao.EduStudentDao">

    <resultMap type="net.maku.edu.entity.EduStudentEntity" id="eduStudentMap">
        <result property="id" column="id"/>
        <result property="no" column="no"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="clazzId" column="clazz_id"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="deleted" column="deleted"/>
        <result property="version" column="version"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="updater" column="updater"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="baseColumns">
        stu.id,stu.no,stu.name,stu.gender,stu.clazz_id,stu.is_enabled
        ,stu.deleted,stu.version,stu.creator,stu.create_time,stu.updater,stu.update_time
    </sql>

    <select id="selectAllPage" resultType="net.maku.edu.vo.EduStudentVO">
        SELECT * FROM (
            SELECT
                <include refid="baseColumns"/>
                ,cla.name AS clazz_name,gra.id as grade_id,gra.name AS grade_name
            FROM edu_student stu
            LEFT JOIN edu_clazz cla ON stu.clazz_id = cla.id
            LEFT JOIN edu_grade gra ON cla.grade_id = gra.id
        ) AS result
        ${ew.customSqlSegment}
    </select>

    <select id="selectById" resultType="net.maku.edu.vo.EduStudentVO">
        SELECT
            <include refid="baseColumns"/>
            ,cla.name AS clazz_name,gra.id as grade_id,gra.name AS grade_name
        FROM edu_student stu
        LEFT JOIN edu_clazz cla ON stu.clazz_id = cla.id
        LEFT JOIN edu_grade gra ON cla.grade_id = gra.id
        WHERE stu.id = #{id}
    </select>
</mapper>
