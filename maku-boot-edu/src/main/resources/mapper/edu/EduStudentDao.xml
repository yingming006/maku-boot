<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.maku.edu.dao.EduStudentDao">

    <resultMap type="net.maku.edu.entity.EduStudentEntity" id="eduStudentMap">
        <result property="id" column="id"/>
        <result property="no" column="no"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="clazzId" column="clazz_id"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="deleted" column="deleted"/>
        <result property="version" column="version"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="updater" column="updater"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="stuColumns">
        stu.id,stu.no,stu.name,stu.gender,stu.clazz_id,stu.clazz_id,stu.is_enabled
        ,stu.deleted,stu.version,stu.creator,stu.create_time,stu.updater,stu.update_time
    </sql>

    <select id="selectListPage" resultType="net.maku.edu.vo.EduStudentVO">
        select
        <include refid="stuColumns">
            <property name="stu" value="stu"/>
        </include>
        , cla.grade_id
        from edu_student stu
        left join edu_clazz cla on stu.clazz_id = cla.id
        ${ew.customSqlSegment}
    </select>
</mapper>
