<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.maku.edu.dao.EduClazzDao">

    <resultMap type="net.maku.edu.entity.EduClazzEntity" id="eduClazzMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="entranceYear" column="entrance_year"/>
        <result property="gradeId" column="grade_id"/>
        <result property="semesterId" column="semester_id"/>
        <result property="headmasterId" column="headmaster_id"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="deleted" column="deleted"/>
        <result property="version" column="version"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="updater" column="updater"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectVOById" resultType="net.maku.edu.vo.EduClazzVO">
        SELECT cla.id,cla.no,cla.name,cla.entrance_year,cla.grade_id,cla.semester_id,cla.headmaster_id
            ,cla.is_enabled,cla.deleted,cla.version,cla.creator,cla.create_time,cla.updater,cla.update_time
            ,eg.name AS gradeName,et.name AS headmasterName
            FROM edu_clazz cla
                LEFT JOIN edu_grade eg ON cla.grade_id = eg.id
                LEFT JOIN edu_teacher et ON cla.headmaster_id = et.id
            WHERE cla.id = #{id}
    </select>
</mapper>
